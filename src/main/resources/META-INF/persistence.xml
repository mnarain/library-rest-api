<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="unasat" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


        <properties>

            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/unalashrm?useUnicode=true;characterEncoding=UTF-8;useSSL=false;verifyServerCertificate=false;"/>

            <property name="javax.persistence.jdbc.user" value="root"/>


            <property name="javax.persistence.jdbc.password" value="12root"/>
        </properties>
    </persistence-unit>
</persistence>

